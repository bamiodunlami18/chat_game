<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />
    <link rel="stylesheet" href="index.css" />
    <title>Document</title>
  </head>
  <body>
    <!-- modal -->
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Join Game</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div>
              <div class="mb-3">
                <label class="form-label" id="queston-field">Enter your name</label>
                <input type="text" class="form-control" id="user-name" placeholder="John Do" />
              </div>
            </div>
            <button type="button" class="btn btn-warning" id="join">Understood</button>
          </div>
        </div>
      </div>
    </div>
    <!-- upper tab -->
    <div class="bar-one default-padding">
      <div class="container">
        <div class="row">
          <!-- left player bar -->
          <div class="col-md-3">
            <div class="leftbar">
              <div class="title">
                <h3>Players</h3>
              </div>
              <div class="player-list">
                <div class="players" id="append-players">
                  <ol id="ol-players"></ol>
                </div>
              </div>
            </div>
          </div>
          <!-- ----------------- -->
          <!-- Messages tab  -->
          <div class="col-md-9">
            <div class="rightbar"></div>
          </div>
          <!-- --------------- -->
        </div>
      </div>
    </div>

    <!-- lower bar -->
    <div class="bar-one default-padding">
      <div class="container">
        <div class="row">
          <!-- left leaderboar bar -->
          <div class="col-md-3">
            <div class="leftbar">
              <div class="title">
                <h3>Leaderboard</h3>
              </div>
              <div class="player-list">
                <div class="players" id="append-players"></div>
              </div>
            </div>
          </div>

          <!--question and answer tab -->
          <div class="col-md-9">
            <div class="rightbar">
              <div class="qa-bar">
                <h5 class="alert alert-primary">You are a: <span id="status">Participant</span></h5>
                <form>
                  <div class="mb-3">
                    <label class="form-label" id="queston-field">Enter Question</label>
                    <input type="email" class="form-control" id="question" placeholder="name@example.com" />
                  </div>
                  <div class="mb-3" id="answer-field">
                    <label class="form-label">Enter Answer</label>
                    <input type="email" class="form-control" id="answer" placeholder="name@example.com" />
                  </div>
                  <button type="submit" class="btn btn-md btn-dark">Send</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/index.js"></script>
  </body>
</html>
